{
  "manifest_version": 3,
  "name": "Article Summarizer (Content Extractor)",
  "version": "1.1",
  "description": "Opens articles, extracts content, sends to API for summary.",
  "permissions": ["storage", "tabs", "scripting", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://localhost:3000/api/extension-summarize-content",
    "https://your-deployed-api.com/api/summarize-content",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
